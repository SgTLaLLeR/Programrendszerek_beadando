generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String?
  name     String
  password String
}

model Products {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  price Int
  isAvailable Boolean
  uploadedAt DateTime
  userId String
}

model file {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  filename String
  path String
  userId String
  productId String?
}
